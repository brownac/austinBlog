body, html
  max-width 100%
  max-height 100%
  background-color whitesmoke

p
  font-size 16px

pre
  font-family sans-serif
  white-space pre-wrap
  white-space -moz-pre-wrap
  white-space -pre-wrap
  white-space -o-pre-wrap
  word-wrap break-word

.ui.container
  padding 30px

.ui.icon.button
  margin-top 20px

.ui.button
  margin-top 30px

.hide
  display none

.ui.red.button
  vertical-align middle
  margin 0 auto
  display block

.four.wide.column
  margin-top 5px

.thumbnail
  max-width 500px
  max-height 500px

#file-input
  display none

#profileImage
  cursor pointer

.comment
  margin-top 20px
  margin-bottom 20px

.name
  left -2em

.profile
  margin-top 20px
  margin-bottom 20px
